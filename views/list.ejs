<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Todo App</title>
  <link rel="icon" href="/public/css/hsgf.png" type="image/png">
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
  <div class="container">
    <div class="todo-box">
      <div class="app-header">
        <i class="fas fa-clipboard-list"></i>
        <h1>Task Master</h1>
      </div>

      <% if (alert) { %>
        <div class="alert alert-<%= alert.type %>" id="alert-message">
          <p><%= alert.message %></p>
          <button class="close-alert"><i class="fas fa-times"></i></button>
        </div>
      <% } %>

      <form action="/" method="POST" class="input-section">
        <div class="input-group">
          <input 
            type="text" 
            name="taskTitle" 
            placeholder="Add a new task..." 
            id="taskInput" 
            autocomplete="off"
          />
          <select name="taskPriority" class="priority-select">
            <option value="low">Low Priority</option>
            <option value="high">High Priority</option>
            <option value="urgent">Urgent Priority</option>
          </select>
        </div>
        <button type="submit" class="add-btn">
          <i class="fas fa-plus"></i>
          <span>Add Task</span>
        </button>
      </form>

      <div class="tasks-container">
        <% if (tasks.length > 0) { %>
          <div class="tasks-list">
            <% tasks.forEach(function(task) { %>
              <div class="task-item <%= task.completed ? 'completed' : '' %>" data-id="<%= task._id %>">
                <div class="task-content">
                  <label class="checkbox-container">
                    <input 
                      type="checkbox" 
                      class="task-checkbox" 
                      <%= task.completed ? 'checked' : '' %>
                      data-id="<%= task._id %>"
                    />
                    <span class="checkmark"></span>
                  </label>
                  
                  <p class="task-title <%= task.completed ? 'completed-text' : '' %>">
                    <%= task.title %>
                  </p>
                  
                  <div class="task-actions">
                    <button class="edit-btn" onclick="showEditForm('<%= task._id %>')">
                      <i class="fas fa-pencil-alt"></i>
                    </button>
                    <form action="/delete" method="POST" class="delete-form">
                      <input type="hidden" name="taskId" value="<%= task._id %>" />
                      <button type="submit" class="delete-btn">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </div>
                
                <div class="priority-badge priority-<%= task.priority %>">
                  <%= task.priority.charAt(0).toUpperCase() + task.priority.slice(1) %> Priority
                </div>
                
                <div class="edit-form" id="edit-form-<%= task._id %>">
                  <form action="/edit" method="POST">
                    <input type="hidden" name="taskId" value="<%= task._id %>" />
                    <input 
                      type="text" 
                      name="updatedTitle" 
                      class="edit-input" 
                      value="<%= task.title %>" 
                    />
                    <select name="updatedPriority" class="priority-select">
                      <option value="low" <%= task.priority === 'low' ? 'selected' : '' %>>
                        Low Priority
                      </option>
                      <option value="high" <%= task.priority === 'high' ? 'selected' : '' %>>
                        High Priority
                      </option>
                      <option value="urgent" <%= task.priority === 'urgent' ? 'selected' : '' %>>
                        Urgent Priority
                      </option>
                    </select>
                    <div class="edit-actions">
                      <button type="submit" class="update-btn">
                        <i class="fas fa-check"></i> Update
                      </button>
                      <button type="button" class="cancel-btn" onclick="hideEditForm('<%= task._id %>')">
                        <i class="fas fa-times"></i> Cancel
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-clipboard-check"></i>
            <p>Your todo list is empty. Add a new task to get started!</p>
          </div>
        <% } %>
      </div>

      <div class="task-counter">
        <p>
          <span class="total-count"><%= tasks.length %> <%= tasks.length === 1 ? "task" : "tasks" %> in total</span>
          <span class="separator">â€¢</span>
          <span class="completed-count"><%= tasks.filter(function(task) { return task.completed; }).length %> completed</span>
        </p>
      </div>
    </div>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
